  var pusher = new Pusher('<%= ENV["PUSHER_KEY"] %>', {
    cluster: '<%= ENV["PUSHER_CLUSTER"] %>'
    }
  );
  var channel = pusher.subscribe('move');
  channel.bind('update', function(data) {
    location.reload(true);
    });
</script>