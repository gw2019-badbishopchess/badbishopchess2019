
<div class="container">
  <h3 class="text-center mt-5"><u>Open Games for Play</u></h3>
    <div class="row mt-3 d-flex justify-content-center">
      <% if @unmatched_games.present? %>
        <% @unmatched_games.each do |game| %>
          <div class="card col-3 m-3">
            <div class="card-body">
              <p class="stats-against mb-0 text-center">OPPONENT</p>
              <h5 class="text-center"><%= open_game_opponent(game).username %></h6>
                  <p class="stats-header mb-1"><u>Their stats:</u></p>
                    <div class="row">
                      <div class="col-8 pb-0 open-stats">Total Played</div>
                      <div class="col-4 pb-0 open-stats"><%= opponent_game_amt(game)%></div>
                    </div>
                    <div class="row">
                      <div class="col-8 pb-0 open-stats">Won</div>
                      <div class="col-4 pb-0 open-stats"><%= opponent_won_amt(game)%></div>
                    </div>
                    <div class="row">
                      <div class="col-8 pb-0 open-stats">Lost</div>
                      <div class="col-4 pb-0 open-stats"><%= opponent_lost_amt(game)%></div>
                    </div>
              <% if game.user_id != current_user.id %>
                <% if game.black_player_id.blank?  %>
                  <%= simple_form_for game, url: join_game_path(game) do |f| %>
                      <%= f.hidden_field 'black_player_id', value: current_user.id  %>
                      <%= f.hidden_field 'state', value: 'in progress' %>
                      <span class="IndexJoinGame"><%= f.submit "Join as Black Player", class: "btn btn-dark"%></span> 
                  <% end %>
                <% elsif game.white_player_id.blank?  %>
                  <%= simple_form_for game, url: join_game_path(game) do |f| %>
                      <%= f.hidden_field 'white_player_id', value: current_user.id  %>
                      <%= f.hidden_field 'state', value: 'in progress' %>
                      <span class="IndexJoinGame"><%= f.submit "Join as White Player", class: "btn btn-outline-dark"%></span> 
                  <% end %>
                <% end %>
              <% else %>
                <p class="text-center mt-2 mb-0 open-your-game">This is your game</p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
</div>